generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ChatStyle {
  informative
  acid
  laele
}

model FAQ {
  id        String   @id @map("_id") @db.ObjectId
  question  String   @map("question")
  answer    String   @map("answer")
  createdBy String   @map("created_by") // discord user id
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model UserPreferences {
  id            String    @id @map("_id") @db.ObjectId
  discordUserId String    @unique @map("discord_user_id") // discord user id
  chatStyle     ChatStyle @map("chat_style")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
}

model InjectionAttempt {
  id               String   @id @map("_id") @db.ObjectId
  userId           String   @map("user_id") // discord user id
  username         String   @map("username")
  channelId        String   @map("channel_id")
  originalMessage  String   @map("original_message")
  sanitizedMessage String   @map("sanitized_message")
  detectionScore   Int      @map("detection_score")
  severity         String   @map("severity") // low, medium, high
  detectedPatterns String[] @map("detected_patterns")
  removedPatterns  String[] @map("removed_patterns")
  wasBlocked       Boolean  @map("was_blocked")
  createdAt        DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([createdAt])
  @@index([severity])
}
