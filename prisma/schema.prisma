generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ChatStyle {
  informative
  acid
  laele
}

model FAQ {
  id        String   @id @map("_id") @db.ObjectId
  question  String   @map("question")
  answer    String   @map("answer")
  createdBy String   @map("created_by") // discord user id
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model UserPreferences {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  discordUserId String    @unique @map("discord_user_id") // discord user id
  chatStyle     ChatStyle @map("chat_style")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
}

model InjectionAttempt {
  id               String   @id @map("_id") @db.ObjectId
  userId           String   @map("user_id") // discord user id
  username         String   @map("username")
  channelId        String   @map("channel_id")
  originalMessage  String   @map("original_message")
  sanitizedMessage String   @map("sanitized_message")
  detectionScore   Int      @map("detection_score")
  severity         String   @map("severity") // low, medium, high
  detectedPatterns String[] @map("detected_patterns")
  removedPatterns  String[] @map("removed_patterns")
  wasBlocked       Boolean  @map("was_blocked")
  createdAt        DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([createdAt])
  @@index([severity])
}

// ==================== API Admin Models ====================

model Prompt {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique // "informative", "acid", "laele", or custom
  name        String // Display name: "Modo Informativo"
  description String? // Optional description
  content     String // The actual prompt text
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
}

model AdminUser {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  discordId   String   @unique @map("discord_id")
  discordName String   @map("discord_name")
  role        String   @default("admin")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
}

model UserBan {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  discordUserId String   @map("discord_user_id")
  action        String   // "ban" or "unban"
  reason        String?
  bannedBy      String   @map("banned_by") // admin discord id
  bannedByName  String   @map("banned_by_name") // admin name snapshot
  createdAt     DateTime @default(now()) @map("created_at")

  @@index([discordUserId])
  @@index([createdAt])
}

// ==================== Better Auth Models ====================

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false) @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  sessions      Session[]
  accounts      Account[]
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  expiresAt DateTime @map("expires_at")
  token     String   @unique
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  userId    String   @map("user_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Account {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  accountId             String    @map("account_id")
  providerId            String    @map("provider_id")
  userId                String    @map("user_id") @db.ObjectId
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  idToken               String?   @map("id_token")
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")
}

model Verification {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
}
